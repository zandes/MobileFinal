<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProject.SearchView"
             Title="Search">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Decks" Priority="0" Order="Secondary" Clicked="OnDecksClicked"/>
        <ToolbarItem Text="Search" Priority="1" Order="Secondary" Clicked="OnSearchClicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Card Name" x:Name="CardName"/>
            <Entry Placeholder="Card Set" x:Name="CardSet"/>
            <Entry Placeholder="Card Type" x:Name="CardType"/>
            <Entry Placeholder="Card Color" x:Name="CardColor"/>
            <Entry Placeholder="Converted Mana Cost" x:Name="CMC" Keyboard="Numeric"/>
            <Button Text="Search" Clicked="OnSearchButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>